{% extends "layout.html.twig" %}


{% block title %}
    {{ parent() }} Admin - Les contacts
{% endblock %}

{% block content %}



    <div class="list-contact">
        <h1>Liste des personnes qui nous ont contact√©s : </h1>
        <table>
            <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Comment</th>
            </tr>
            </thead>
            <tbody>

            {% for person in persons %}

                <tr>
                    <td>{{ person.firstname }}</td>
                    <td>{{ person.lastname }}</td>
                    <td>{{ person.email }}</td>
                    <td>{{ person.comment }}</td>
                </tr>

            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}