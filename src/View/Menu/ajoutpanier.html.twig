{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} Ma liste de commande
{% endblock %}

{% block content %}
<div class="container-add-panier">
<div class="serveur">
    <img src="/assets/images/background-images/serveur.svg" alt="">
</div>
    <div class="box-msg">
        {% if success != NULL %}
            <div class="success">
                <h1>{{ success }}</h1>
            </div>
        {% elseif errors != NULL %}
            <div class="alert">
                <p>{{ errors }}</p>
            </div>
        {% endif %}

    </div>

    <div class="command-status">
        {% if commandstatus is defined and commandstatus is not null %}
            <div class="status">
                <i class="fas fa-info-circle"></i>
                <h1>{{ commandstatus }}</h1>
            </div>
        {% endif %}
    </div>

    {% if mycommands !=null %}
    <div class="box-command">
        <table>
            <tr>
                <th>Menu(s)</th>
                <th>Prix (€)</th>
            </tr>
        </table>
        {% endif %}

        {% for command in mycommands %}
            <div class="box-menu">
                <table>
                    <tr>
                        <td><p>{{ command.name }}</p></td>
                        <td><p>{{ command.price }}</p></td>
                    </tr>
                </table>

                <div class="delete-section">
                    <form action="/menu/delete/{{ loop.index0 }}" method="post">
                        <button>Suprimer</button>
                    </form>
                </div>
            </div>
        {% endfor %}


        {% if mycommands !=null %}
        <div class="total">
            <table>
                <tr>
                    <th>Total : </th>
                    <th>{{ total }} (€)</th>
                </tr>
            </table>
            {% endif %}

        {% if mycommands !=null %}
            <div class="confirm-command">
                <form action="/menu/confirm" method="POST">
                    <input type="submit" name="confirm-command" value="Valider sa commande !">
                </form>
            </div>
        {% endif %}

            <div class="command-passed">
                <h1>Mes commandes antérieures</h1>
                {% for commandpassed in commandspassed %}
                <div class="box-ant">
                    <h2><i class="fas fa-shopping-bag"></i></h2>
                        <h2>Commande  : {{ commandpassed.id ~ commandpassed.lastname ~ loop.index}}</h2>
                        <h2>Date de commande : {{ commandpassed.created_at }}</h2>
                        <h2>Prix de la commande : {{ commandpassed.amount }} €</h2>
                </div>
                {% endfor %}
            </div>
    </div>

</div>



{% endblock %}